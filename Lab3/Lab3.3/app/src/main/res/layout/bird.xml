<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/huuhkaja"
            android:src="@drawable/huuhkaja"
            android:onClick="huuhkajaTalk">
        </ImageView>

        <ImageView
            android:id="@+id/peippo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="peippoTalk"
            android:src="@drawable/peippo"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/peukaloinen"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="peukaloinenTalk"
            android:src="@drawable/peukaloinen"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/punatulkku"
            android:layout_weight="1"
            android:src="@drawable/punatulkku"
            android:onClick="punatulkkuTalk">
        </ImageView>
    </LinearLayout>
</LinearLayout>

