<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bear"
            android:layout_weight="1"
            android:src="@drawable/bear"
            android:onClick="bearTalk">
        </ImageView>

        <ImageView
            android:id="@+id/wolf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="wolfTalk"
            android:src="@drawable/wolf"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/elephant"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="elephantTalk"
            android:src="@drawable/elephant"></ImageView>

        <ImageView
            android:id="@+id/lamb"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="lambTalk"
            android:src="@drawable/lamb"></ImageView>
    </LinearLayout>
</LinearLayout>

